    classDef decision fill:#FFD700,stroke:#DAA520,stroke-width:2px,color:#333
    classDef action fill:#4A90E2,stroke:#2E5C8A,stroke-width:2px,color:#fff
    
    class Start,End startEnd
    class Decision1,Decision2 decision
